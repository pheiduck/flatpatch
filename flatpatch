#!/usr/bin/env sh

#Check Privileges
if [ $(whoami) != 'root' ]; then
  echo "Please run with sudo privileges"
  exit 1

#Check OS
elif [ $(grep ^ID= /etc/os-release | cut -d'=' -f2) != 'ubuntu' ]; then
  YELLOW='\033[1;33m'
  NC='\033[0m'
  echo "${YELLOW}You are trying to install this on an unsupported distribution.\nOnly Ubuntu is supported.${NC}"
  exit 1
else

#Uninstall snapd
pushd /etc/apt/preferences.d/
cat > nosnap.pref <<EOF
# To prevent repository packages from triggering the installation of snap,
# this file forbids snapd from being installed by APT.

Package: snapd
Pin: release a=*
Pin-Priority: -10
EOF
popd
snap remove --purge $(snap list | awk '!/^Name|^core/ {print $1}') 2> /dev/null
apt-get purge -y snapd gnome-software-plugin-snap 2> /dev/null
systemctl disable --now snapd.socket 2> /dev/null
systemctl daemon-reload 2> /dev/null
rm -rfv ~/snap /snap /var/snap /var/lib/snapd /var/cache/snapd
fi

if [ $(grep ^VERSION_ID /etc/os-release | cut -d'"' -f2) != '24.04' ]; then
#Install Flatpak
add-apt-repository ppa:flatpak/stable
apt-get update
apt-get install -y flatpak gnome-software-plugin-flatpak
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
else
#Install Flatpak
apt-get update
apt-get install -y flatpak gnome-software-plugin-flatpak
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
fi
echo "It's recommended to reboot the system!"

